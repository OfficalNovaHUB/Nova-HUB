local RunService = game:GetService("RunService")
local VirtualInputManager = game:GetService("VirtualInputManager")
local Players = game:GetService("Players")
local GuiService = game:GetService("GuiService")
local UserInputService = game:GetService("UserInputService")
local CoreGui = game:GetService("CoreGui")
local TweenService = game:GetService("TweenService")

local player = Players.LocalPlayer
local pGui = player:WaitForChild("PlayerGui")

local isAutoBattleEnabled = false
local lastSize = 0
local alreadyClickedThisCycle = false

local function getSecureParent()
    local success, result = pcall(function()
        return gethui and gethui() or CoreGui:FindFirstChild("RobloxGui") or CoreGui or pGui
    end)
    return success and result or pGui
end

local function createVisualFeedback(x, y, parent)
    local feedback = Instance.new("Frame")
    feedback.Name = "ClickVisual"
    feedback.Size = UDim2.new(0, 10, 0, 10)
    feedback.Position = UDim2.new(0, x, 0, y)
    feedback.AnchorPoint = Vector2.new(0.5, 0.5)
    feedback.BackgroundColor3 = Color3.fromRGB(160, 100, 255)
    feedback.BackgroundTransparency = 0
    feedback.BorderSizePixel = 0
    feedback.ZIndex = 99999
    feedback.Parent = parent

    Instance.new("UICorner", feedback).CornerRadius = UDim.new(1, 0)

    local tweenInfo = TweenInfo.new(0.2, Enum.EasingStyle.Quart, Enum.EasingDirection.Out)
    local tween = TweenService:Create(feedback, tweenInfo, {
        Size = UDim2.new(0, 60, 0, 60),
        BackgroundTransparency = 1
    })

    tween:Play()
    task.delay(0.25, function() feedback:Destroy() end)
end

local function startNovaPVP()
    local screenGui = Instance.new("ScreenGui")
    screenGui.Name = "NovaHub_PVP"
    screenGui.Parent = getSecureParent()
    screenGui.ResetOnSpawn = false
    screenGui.IgnoreGuiInset = true

    local mainFrame = Instance.new("Frame")
    mainFrame.Size = UDim2.new(0, 300, 0, 160)
    mainFrame.Position = UDim2.new(0.5, -150, 0.5, -80)
    mainFrame.BackgroundColor3 = Color3.fromRGB(15, 15, 30)
    mainFrame.BackgroundTransparency = 0.3
    mainFrame.BorderSizePixel = 0
    mainFrame.Active = true
    mainFrame.Parent = screenGui

    Instance.new("UICorner", mainFrame).CornerRadius = UDim.new(0, 15)
    local uiStroke = Instance.new("UIStroke", mainFrame)
    uiStroke.Thickness = 2
    uiStroke.Color = Color3.fromRGB(160, 100, 255)
    uiStroke.Transparency = 0.4

    local title = Instance.new("TextLabel")
    title.Size = UDim2.new(1, 0, 0, 50)
    title.BackgroundTransparency = 1
    title.Text = "NOVA HUB | PVP"
    title.TextColor3 = Color3.new(1, 1, 1)
    title.TextSize = 22
    title.Font = Enum.Font.GothamBold
    title.Parent = mainFrame

    local toggleBtn = Instance.new("TextButton")
    toggleBtn.Size = UDim2.new(0.8, 0, 0, 50)
    toggleBtn.Position = UDim2.new(0.1, 0, 0.45, 0)
    toggleBtn.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    toggleBtn.BackgroundTransparency = 0.9
    toggleBtn.Text = "AUTO: OFF"
    toggleBtn.TextColor3 = Color3.fromRGB(255, 50, 50)
    toggleBtn.TextSize = 16
    toggleBtn.Font = Enum.Font.GothamBold
    toggleBtn.Parent = mainFrame
    Instance.new("UICorner", toggleBtn).CornerRadius = UDim.new(0, 10)

    -- GLOBAL LOCK DRAGGING
    local dragging = false
    local dragInput = nil
    local dragStart = nil
    local startPos = nil

    mainFrame.InputBegan:Connect(function(input)
        if (input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch) then
            dragging = true
            dragStart = input.Position
            startPos = mainFrame.Position
            
            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    dragging = false
                end
            end)
        end
    end)

    UserInputService.InputChanged:Connect(function(input)
        if dragging and (input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch) then
            local delta = input.Position - dragStart
            mainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        end
    end)

    toggleBtn.MouseButton1Click:Connect(function()
        isAutoBattleEnabled = not isAutoBattleEnabled
        toggleBtn.Text = isAutoBattleEnabled and "AUTO: ON" or "AUTO: OFF"
        toggleBtn.TextColor3 = isAutoBattleEnabled and Color3.fromRGB(50, 200, 50) or Color3.fromRGB(255, 50, 50)
    end)

    RunService.PreRender:Connect(function()
        if not isAutoBattleEnabled then return end

        pcall(function()
            local battleFrame = pGui.ScreenGui.BattleFrame
            local target = battleFrame.Modela
            local ring = target.Ring

            if not ring.Visible then
                alreadyClickedThisCycle = false
                return
            end

            local currentSize = ring.AbsoluteSize.X
            local targetSize = target.AbsoluteSize.X

            if currentSize > lastSize + 5 then
                alreadyClickedThisCycle = false
            end
            lastSize = currentSize

            if not alreadyClickedThisCycle and currentSize <= (targetSize * 1.03) then
                alreadyClickedThisCycle = true

                local inset = GuiService:GetGuiInset()
                local absPos = target.AbsolutePosition
                local absSize = target.AbsoluteSize
                
                local centerX = absPos.X + (absSize.X / 2) + inset.X
                local centerY = absPos.Y + (absSize.Y / 2) + inset.Y

                createVisualFeedback(centerX, centerY, screenGui)

                VirtualInputManager:SendMouseButtonEvent(centerX, centerY, 0, true, game, 0)
                VirtualInputManager:SendMouseButtonEvent(centerX, centerY, 0, false, game, 0)
            end
        end)
    end)
end

startNovaPVP()
